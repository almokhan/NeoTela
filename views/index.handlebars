<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link rel="icon" href="../icons/favicon.png" type="image/png">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEO - Dashboard de Produção</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 10px;
            color: #333;
        }
        .dashboard {
            display: flex;
            gap: 0; /* Remove espaço entre as tabelas */
            flex-wrap: wrap;
        }
        .table-container {
            background-color: #504f4f);
            flex: 1;
            min-width: 300px;
            border: 3px solid black; /* Borda preta de 3 pixels */
        }
        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0; /* Remove espaço entre as células */
        }
        th, td {
            background-color: #504f4f;
            padding: 21px;
            text-align: left;
            color: Black;
        }
        th {
            background-color: #494949; 
            color: yellow;
        }
        .yellow-bg { background-color: #504f4f; color: rgb(250, 234, 9); }
        .red-bg { background-color: #c50619; color: black; }
        .gray-bg { background-color: #504f4f; color: black; }
        .gray-apr { background-color: #504f4f; color: yellow; }
        .input-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 20px;
        }
        .input-group {
            display: flex;
            flex-direction: column;
        }
        input {
            width: 100px;
            padding: 8px;
            border: 1px solid #ddd;
        }
        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #45a049;
        }
        h2 {
            margin-top: 0;
            color: #4CAF50;
        }

        /* Estilo específico para a tabela da direita */
        .table-container:nth-child(2) td {
            padding: 6px; /* Diminui o padding para as células da tabela da direita */
        }
    </style>
</head>
<body>
    <h2>Produção</h2>
    <div class="input-container">
        <div class="input-group">
            <label for="periodo">Período:</label>
            <input type="text" id="periodo" placeholder="Período">
        </div>
        <div class="input-group">
            <label for="produto">Produto:</label>
            <input type="text" id="produto" placeholder="Produto">
        </div>
        <div class="input-group">
            <label for="linha">Linha:</label>
            <input type="text" id="linha" placeholder="Linha">
        </div>
    </div>
    <div class="variable-selector">
        <label for="variableSelect">Selecione a variável:</label>
        <select id="variableSelect">
            <option value="6">Variável 6</option>
            <option value="7">Variável 7</option>
            <option value="8">Variável 8</option>
            <option value="9">Variável 9</option>
            <option value="10">Variável 10</option>
            <option value="11">Variável 11</option>
            <option value="12">Variável 12</option>
            <option value="13">Variável 13</option>
            <option value="14">Variável 14</option>
            <option value="15">Variável 15</option>
            <option value="16">Variável 16</option>
            <option value="17">Variável 17</option>
            <option value="18">Variável 18</option>
            <option value="19">Variável 19</option>
            <option value="20">Variável 20</option>
            <option value="21">Variável 21</option>
            <option value="22">Variável 22</option>
            <option value="23">Variável 23</option>
        </select>
        <input type="number" id="variableValue" placeholder="Novo valor">
        <button onclick="atualizarVariavel()">Atualizar Variável</button>
    </div>

    <div class="dashboard">
        <!-- Tabela de Produção agora está em primeiro lugar -->
        <div class="table-container">
            <table>
                <tr>
                    <th colspan="3">Periodo: <span id="periodoSpan"></span></th>
                </tr>
                <tr>
                    <td colspan="3" class="gray-apr">Produto: <span id="produtoSpan"></span></td>
                </tr>
                <tr>
                    <td class="yellow-bg">Planejada</td>
                    <td class="red-bg"><span id="valor16"></span></td>
                    <td class="gray-bg"><span id="valor17"></span></td>
                </tr>
                <tr>
                    <td class="yellow-bg">Expectativa</td>
                    <td class="red-bg"><span id="valor18"></span></td>
                    <td class="gray-bg"><span id="valor19"></span></td>
                </tr>
                <tr>
                    <td class="yellow-bg">Produzidas</td>
                    <td class="red-bg"><span id="valor20"></span></td>
                    <td class="gray-bg"><span id="valor21"></span></td>
                </tr>
                <tr>
                    <td class="yellow-bg">Reprovadas</td>
                    <td class="red-bg"><span id="valor22"></span></td>
                    <td class="gray-bg"><span id="valor23"></span></td>
                </tr>
                <tr>
                    <td class="gray-bg"> </td>
                    <td class="gray-bg">Hora</td>
                    <td class="gray-bg">Turno</td>
                </tr>
            </table>
        </div>

        <!-- Tabela de Hora X Hora agora está em segundo lugar -->
        <div class="table-container">
            <table>
                <tr>
                    <th colspan="2">Linha: <span id="linhaSpan"></span></th>
                </tr>
                <tr>
                    <td colspan="2">Hora X Hora</td>
                </tr>
                <tr>
                    <td colspan="2">Hora Produção</td>
                </tr>
                <tr><td>6:00</td><td><span id="valor6"></span></td></tr>
                <tr><td>7:00</td><td><span id="valor7"></span></td></tr>
                <tr><td>8:00</td><td><span id="valor8"></span></td></tr>
                <tr><td>9:00</td><td><span id="valor9"></span></td></tr>
                <tr><td>10:00</td><td><span id="valor10"></span></td></tr>
                <tr><td>11:00</td><td><span id="valor11"></span></td></tr>
                <tr><td>12:00</td><td><span id="valor12"></span></td></tr>
                <tr><td>13:00</td><td><span id="valor13"></span></td></tr>
                <tr><td>14:00</td><td><span id="valor14"></span></td></tr>
                <tr><td>15:00</td><td><span id="valor15"></span></td></tr>
            </table>
        </div>
    </div>
</body>
</html>


    <script>
        const valores = {
            6: 100, 7: 150, 8: 200, 9: 180, 10: 220,
            11: 190, 12: 210, 13: 230, 14: 200, 15: 180,
            16: 10, 17: 11, 18: 12, 19: 13, 20: 14,
            21: 15, 22: 16, 23: 17
        };

        function atualizarVariavel() {
            const variableSelect = document.getElementById('variableSelect');
            const variableValue = document.getElementById('variableValue');
            const selectedVariable = variableSelect.value;
            const newValue = parseInt(variableValue.value);

            if (!isNaN(newValue)) {
                valores[selectedVariable] = newValue;
                atualizarValores();
                variableValue.value = ''; // Limpa o campo de entrada
            } else {
                alert('Por favor, insira um valor numérico válido.');
            }
        }

        function atualizarValores() {
            for (let i = 6; i <= 23; i++) {
                const span = document.getElementById(`valor${i}`);
                if (span) {
                    span.textContent = valores[i];
                }
            }

            document.getElementById('periodoSpan').textContent = document.getElementById('periodo').value;
            document.getElementById('produtoSpan').textContent = document.getElementById('produto').value;
            document.getElementById('linhaSpan').textContent = document.getElementById('linha').value;
        }

        window.onload = function() {
            atualizarValores();
        };
    </script>
</body>
</html>